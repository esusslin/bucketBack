
<h1>Customers</h1>
 
<table>
  <tr>
  <th>Firstname</th>
    <th>Lastname</th>
    
    <th>Email</th>
    <th>Password</th>
    <th>Checking</th>
    <th>Savings</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= "--" %></td>
       <td><%= user.checking %></td>
       <td><%= user.savings %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
    </tr>
  <% end %>
</table>